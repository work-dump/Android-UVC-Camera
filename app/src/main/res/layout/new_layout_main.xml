<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background">


    <Button
        android:id="@+id/restoreValues"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Load Values"
        android:onClick="restoreCameraSettings"

        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"

        />


    <TextView
        android:id="@+id/textDarstellung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="387dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.95"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        android:gravity="center"
        android:translationZ="90dp"
        />

    <Button
        android:id="@+id/findTheCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find the Camera"
        android:onClick="searchTheCamera"


        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"  />



    <Button
        android:id="@+id/einstellungen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        tools:layout_editor_absoluteX="43dp"
        tools:layout_editor_absoluteY="259dp"

        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/findTheCamera"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />

    <Button
        android:id="@+id/testRunButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Testrun"
        android:onClick="isoRead"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"

        />

    <Button
        android:id="@+id/startTheStream"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start the Camera Stream"
        android:onClick="kamera_video"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/testRunButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4"

        />

    <Button
        android:id="@+id/readMeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View the Read_Me"
        android:onClick="viewReadme"
        app:layout_constraintHorizontal_weight="1"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />

    <Button
        android:id="@+id/viewPrivatePolicyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Privacy Policy"
        android:onClick="viewPrivatePolicy"

        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/readMeButton"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        />




</android.support.constraint.ConstraintLayout>